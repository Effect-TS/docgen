{
  "name": "@effect/docgen",
  "version": "0.3.1",
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "An opinionated documentation generator for Effect projects",
  "engines": {
    "node": ">=16.17.1"
  },
  "bin": {
    "docgen": "./dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/effect-ts/docgen.git"
  },
  "author": "Giulio Canti <giulio.canti@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/effect-ts/docgen/issues"
  },
  "homepage": "https://github.com/effect-ts/docgen",
  "files": [
    "dist",
    "src",
    "schema.json"
  ],
  "scripts": {
    "prepare": "pnpm clean && pnpm build",
    "update-version": "changeset version && pnpm install --no-frozen-lockfile",
    "lint": "eslint src test",
    "lint-fix": "eslint src test --fix",
    "coverage": "vitest run --coverage",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "build": "tsc -b tsconfig.build.json",
    "schema": "tsx scripts/gen-schema.ts",
    "docgen": "tsx src/bin.ts"
  },
  "dependencies": {
    "@effect/platform-node": "^0.29.0",
    "@effect/schema": "^0.47.3",
    "chalk": "^5.3.0",
    "doctrine": "^3.0.0",
    "effect": "2.0.0-next.54",
    "glob": "^10.3.10",
    "markdown-toc": "github:effect-ts/markdown-toc",
    "prettier": "^3.0.3",
    "ts-morph": "^20.0.0",
    "tsconfck": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@effect/eslint-plugin": "^0.1.2",
    "@effect/language-service": "^0.0.21",
    "@types/doctrine": "0.0.9",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.53.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-codegen": "^0.18.1",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "tsx": "^4.1.0",
    "typescript": "^5.2.2"
  }
}
