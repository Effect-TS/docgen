{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "dist",
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@effect/docgen": [
        "./src/index.ts"
      ],
      "@effect/docgen/test/*": [
        "./test/*"
      ],
      "@effect/docgen/examples/*": [
        "./examples/*"
      ],
      "@effect/docgen/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "@effect/language-service",
        "diagnostics": {
          "1002": "none"
        }
      }
    ]
  },
  "include": [
    "./src",
    "./test",
    "gen-schema.ts"
  ]
}
